<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cashbook_category_image"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/cashbook_category_name"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toRightOf="@+id/cashbook_category_image"
            app:layout_constraintRight_toLeftOf="@+id/cashbook_blank"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/cashbook_blank"
            android:layout_width="80dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toRightOf="@+id/cashbook_category_name"
            app:layout_constraintRight_toLeftOf="@+id/cashbook_money"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cashbook_money"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="end"
            app:layout_constraintLeft_toRightOf="@+id/cashbook_blank"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>